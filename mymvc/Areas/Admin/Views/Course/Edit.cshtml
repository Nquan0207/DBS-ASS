@model Course

<div class = "card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Course</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="CourseId" hidden />
            <div class="border p-3 mt-4">
                @* <div asp-validation-summary="All"></div> *@

                <div class="form-floating py-2 col-12">
                    <input asp-for="CourseName" class="form-control border-0 shadow" />
                    <label asp-for="CourseName" class="ms-2"></label>
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Credit" class="form-control border-0 shadow" />
                    <label asp-for="Credit" class="ms-2"></label>
                    <span asp-validation-for="Credit" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Department" class="form-control border-0 shadow" />
                    <label asp-for="Department" class="ms-2"></label>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                
                    <div class="col-6 col-md-3">
                        <a asp-controller="Course" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
                
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
