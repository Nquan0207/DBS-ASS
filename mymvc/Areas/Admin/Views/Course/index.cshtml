@model List<Course>

<div class = "card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Course List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                <h2 class="text-primary">Course List</h2>
            </div>
            <div class="col-6 text-end">
                @if (User.IsInRole(SD.Role_Admin))
                {
                    <a asp-controller="Course" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Course
                    </a>
                }
            </div>

        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Course Name</th>
                    <th>Credit</th>
                    <th>Department</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>@obj.CourseName</td>
                        <td>
                            @obj.Credit
                        </td>
                        <td>
                            @obj.Department
                        </td>
                        <td>
                            @obj.Description
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                @if (User.IsInRole(SD.Role_Admin))
                                {
                                    <a asp-controller="Course" asp-action="Edit" asp-route-ID="@obj.CourseId" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Course" asp-action="Delete" asp-route-ID="@obj.CourseId" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
