@model ScheduleVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Schedule.ScheduleId!=0?"Update":"Create") Schedule</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Schedule.ScheduleId" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @* <div asp-validation-summary="All"></div> *@
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Schedule.CourseId" asp-items="@Model.CourseList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Course--</option>
                            </select>
                            <label asp-for="Schedule.CourseId" class="ms-2"></label>
                            <span asp-validation-for="Schedule.CourseId" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Schedule.Time" type="time" class="form-control border-0 shadow" />
                            <label asp-for="Schedule.Time" class="ms-2"></label>
                            <span asp-validation-for="Schedule.Time" class="text-danger"></span>
                        </div>
                        @* <div class="py-2 col-12"> *@
                        @*     <label asp-for="Schedule.Description" class="ms-2 text-muted"></label> *@
                        @*     <textarea asp-for="Schedule.Description" class="form-control border-0 shadow"></textarea> *@
                        @* </div> *@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Schedule.Date" type="date" class="form-control border-0 shadow" />
                            <label asp-for="Schedule.Date" class="ms-2"></label>
                            <span asp-validation-for="Schedule.Date" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Schedule.Location" class="form-control border-0 shadow" />
                            <label asp-for="Schedule.Location" class="ms-2"></label>
                            <span asp-validation-for="Schedule.Location" class="text-danger"></span>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Schedule.ScheduleId != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }

                            </div>

                            <div class="col-6 col-md-3">
                                <a asp-controller="Schedule" asp-action="Index" class="btn btn-outline-primary border form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </form>
                
            
    </div>
</div>



