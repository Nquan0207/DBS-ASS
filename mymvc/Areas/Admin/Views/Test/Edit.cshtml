@model TestVM




<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Test</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Test.TESTID" hidden value="@Model.Test.TESTID" />
            <input asp-for="Test.CourseId" hidden value="@Model.Test.CourseId" /> 
            <div class="border p-3">
                @* <div asp-validation-summary="All"></div> *@
                <div class="form-floating py-2 col-12">
                    <select asp-for="Test.CourseId" asp-items="@Model.CourseList" class="form-select border-0 shadow"disabled>
                        <option disabled selected>--Select Course--</option>
                    </select>
                    <label asp-for="Test.CourseId" class="ms-2"></label>
                    <span asp-validation-for="Test.CourseId" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Test.Time" type="time" class="form-control border-0 shadow" />
                    <label asp-for="Test.Time" class="ms-2"></label>
                    <span asp-validation-for="Test.Time" class="text-danger"></span>
                </div>
                @* <div class="py-2 col-12"> *@
                @*     <label asp-for="Schedule.Description" class="ms-2 text-muted"></label> *@
                @*     <textarea asp-for="Schedule.Description" class="form-control border-0 shadow"></textarea> *@
                @* </div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Test.Date" type="date" class="form-control border-0 shadow" />
                    <label asp-for="Test.Date" class="ms-2"></label>
                    <span asp-validation-for="Test.Date" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Save</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Test" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
