@model List<Test>

<div class = "card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Test List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                <h2 class="text-primary">Test List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Test" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Test
                </a>
            </div>

        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Course</th>
                    <th>Time</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>@obj.Course.CourseName</td>
                        <td>@obj.Time</td>
                        <td>@obj.Date</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Test" asp-action="Edit" asp-route-ID="@obj.TESTID" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Test" asp-action="Delete" asp-route-ID="@obj.TESTID" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
