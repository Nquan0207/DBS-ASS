@model Monitor

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Monitor</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="form-floating py-2 col-12">
                <input value="@Model.Lecturer.FULL_NAME" class="form-control border-0 shadow" disabled/>
                <label asp-for="LID" class="ms-2"></label>
                <span asp-validation-for="LID" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input value="@Model.Course.CourseName" class="form-control border-0 shadow" disabled />
                <label asp-for="CourseId" class="ms-2"></label>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button asp-controller="Monitor" asp-action="Delete1" asp-route-id="@Model.LID" asp-route-id2="@Model.CourseId" class="btn btn-primary form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Monitor" asp-action="Index" class="btn btn-outline-primary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>


