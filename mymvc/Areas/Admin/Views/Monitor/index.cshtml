@model List<Monitor>

<div class = "card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Monitor List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                <h2 class="text-primary">Monitor List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Monitor" asp-action="UpsertLecturer" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Monitor
                </a>
            </div>

        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Lecturer</th>
                    <th>Course</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var thing in Model)
                {
                    <tr>
                        <td>@thing.LID</td>
                        <td>@thing.CourseId</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                @* <a asp-controller="Monitor" asp-action="UpsertLecturer" asp-route-id="@thing.LID" asp-route-id2="@thing.CourseId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a> *@
                                <a asp-controller="Monitor" asp-action="Delete" asp-route-id="@thing.LID" asp-route-id2="@thing.CourseId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
